	<!--================ Mail Configuration ========================-->
	<bean id="SimpleMailSender" class="net.cominfo.digiagent.utils.mail.SimpleMailSender">
		<property name="host" value="smtp.163.com" />
		<property name="from" value="shangxunw@163.com" />
		<property name="username" value="shangxunw@163.com" />
		<property name="password" value="shangxunwang1" />
	</bean>
	
	<!-- 邮件认证实现 -->
	<bean id="smtpAuthenticator" class="net.cominfo.digiagent.utils.mail.SmtpAuthenticator">
		<constructor-arg index="0" value="shangxunw@163.com"/>
		<constructor-arg index="1" value="shangxunwang1"/>
	</bean>
	
	<!-- 邮件 mailSession -->
	<bean id="mailSession" class="javax.mail.Session" factory-method="getInstance">
		<constructor-arg>
			<props>
				<prop key="mail.smtp.host">smtp.163.com</prop>
				<prop key="mail.smtp.auth">true</prop>
				<!-- 如果mail服务器是ssl认证，则去掉这里的注释符号
				<prop key="mail.smtp.socketFactory.port">465</prop>
				<prop key="mail.smtp.socketFactory.class">javax.net.ssl.SSLSocketFactory</prop>
				<prop key="mail.smtp.socketFactory.fallback">false</prop>
				-->
			</props>
		</constructor-arg>
		<constructor-arg ref="smtpAuthenticator" />
	</bean>
	
	<bean id="mailSender" class="org.springframework.mail.javamail.JavaMailSenderImpl">

